import matplotlib.pyplot as plt

my_file = open("TUMAMAC_my_data.txt")
data = my_file.read()
numbers = data.replace('\n', ' ').replace(',','').split()
my_file.close()

prime = []
composite = []

for i in range (int(len(numbers))):
    num = int(numbers[i])
    if num == 0 or num == 1:
        composite.append(numbers[i])
    elif num>1:
        is_prime = True
        for m in range(2, num):
            if num % m == 0:
                composite.append(numbers[i])
                is_prime = False
                break
        if is_prime:
            prime.append(numbers[i])

print(prime)
print(composite)

plt.bar(['Primes', 'Composites'], [len(prime), len(composite)], alpha=0.5)
plt.title('Number of Primes vs. Composites')
plt.ylabel('Count')
plt.show()
