import math
import matplotlib.pyplot as plt

# Bounds
a = 0
b = 1

def mp_rule(n):
  dx = (b - a) / n
  sum = 0
  for i in range (n):
    x_0 = a + (dx * i)
    x_n = a + (dx * (i+1))
    x = (x_0 * x_n) ** 0.5
    
    # Function
    fn = math.exp(x ** 2)
    sum += fn
  final = dx * sum
  return final

values = range(4, 13)
results = [mp_rule(n) for n in values]

plt.plot(values, results)
plt.xlabel("n")
plt.ylabel("Values")
plt.title("Midpoint Rule Approximation")
plt.show()
